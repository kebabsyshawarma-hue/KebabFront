rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for menu and hero slides
    match /menu/{document=**} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /heroSlides/{document=**} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Orders collection rules
    match /orders/{orderId} {
      // Admins can read all orders.
      allow read: if request.auth.token.admin == true;
      
      // Allow anyone to create an order. 
      // WARNING: This is not recommended for production as it allows unrestricted writes.
      allow create: if true;

      // Only admins can update orders (e.g., status). The webhook uses the Admin SDK and bypasses this rule.
      allow update: if request.auth.token.admin == true;
      
      // No one can delete orders
      allow delete: if false;
    }
  }
}
