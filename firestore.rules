rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for menu and hero slides
    match /menu/{document=**} {
      allow read: if true;
    }
    match /categories/{document=**} {
      allow read: if true;
    }
    match /heroSlides/{document=**} {
      allow read: if true;
    }

    // Orders collection rules
    match /orders/{orderId} {
      // Admins can read all orders, authenticated users can read their own orders
      allow read: if request.auth.token.admin == true || (request.auth != null && request.auth.uid == resource.data.customerDetails.uid);
      // Authenticated users can create orders
      allow create: if request.auth != null;
      // Only admins can update orders (e.g., status)
      allow update: if request.auth.token.admin == true;
      // No one can delete orders
      allow delete: if false;
    }
  }
}
